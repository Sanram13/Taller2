    private void actualizarPuntos(int puntos) {
    if (turno == 1) {
        totalPuntosEquipo1 += puntos;
        if (totalPuntosEquipo1 > MAX_PUNTOS) {
            totalPuntosEquipo1 = MAX_PUNTOS;
        }
        PuntosTotales.setText("Equipo 1: " + totalPuntosEquipo1 + " puntos");
        } else {
        totalPuntosEquipo2 += puntos;
            if (totalPuntosEquipo2 > MAX_PUNTOS) {
            totalPuntosEquipo2 = MAX_PUNTOS;
            }
        PuntosTotales.setText("Equipo 2: " + totalPuntosEquipo2 + " puntos");
    }

    seleccionContador++;
    if (seleccionContador == 5) {
        cambiarTurno();
        seleccionContador = 0;
    }

    verificarGanador();  
}

    private void cambiarTurno() {
        turno = (turno == 1) ? 2 : 1; 
    }

    private void verificarGanador() {
        if (totalPuntosEquipo1 >= MAX_PUNTOS) {
        Ganador.setText("¡Equipo 1 ha ganado!"); 
        deshabilitarBotones();
        } else if (totalPuntosEquipo2 >= MAX_PUNTOS) {
        Ganador.setText("¡Equipo 2 ha ganado!"); 
        deshabilitarBotones();
        } else {
        Ganador.setText("");
    }
}

    private void deshabilitarBotones() {
        Botella1.setEnabled(false);
        Botella2.setEnabled(false);
        Rana1.setEnabled(false);
        Rana2.setEnabled(false);
        Hueco1.setEnabled(false);
        Hueco2.setEnabled(false);
        Hueco3.setEnabled(false);
        Hueco4.setEnabled(false);
        Hueco5.setEnabled(false);
        Hueco6.setEnabled(false);
        Hueco7.setEnabled(false);
        Hueco8.setEnabled(false);
        Hueco9.setEnabled(false);
    }
    
